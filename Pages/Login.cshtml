@page "/login"
@model IIS.Dashboard.Pages.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IIS.Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IIS.Dashboard.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container" style="height:calc(100vh - 100px)">
        <div class="container d-flex align-items-center justify-content-center" style="margin:20px">
            <form asp-page-handler="Login" class="center border border-light p-3 w-50" method="post">
                <div class="text-center">
                    <p class="h4 mb-4">IIS.Dashboard</p>
                    <p>Manage IIS from website application</p>
                </div>
                <p style="color:red;margin-bottom:3px;margin-top:3px">@Model.SummaryError</p>
                <input name="email" type="email" placeholder="E-mail" class="form-control mb-2">
                <input name="password" type="password" placeholder="Password" class="form-control mb-2">
                <button type="submit" class="btn btn-info btn-block">Login</button>
            </form>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - IIS.Dashboard - Developement by Luan Nguyen
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

  
</body>
</html>